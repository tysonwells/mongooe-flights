<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: <%= flight.airline %></div>
  </section>  
    <div>Flight Number: <%= flight.flightNo %> </div>
  </section>
  <section>
    <div> Departs: <%= flight.departs %> </div>
  </section>
  <section>
    <div>Destination:</div>
  <ul>
    <%- flight.dest.map(d => `<li>${d.airport}</li>`).join('') %>
  </ul>
  </section>
  <form id="add-dest-to-destination" action="???" method="POST">
    <select name="destinationId">
      <%- destinations.map(d => `<option value="${d._id}">${d.airport}</option>`).join('') %>
    </select>
    <button type="submit">Add to Destination</button>
  </form>

  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="content-textarea">ticket:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <label for="ticket-price">price:</label>
    <input name="price" type="number" id="ticket-price">
    </select>
    <button type="submit">Add Ticket</button>
  </form>

  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No tickets Yet</h3>
  <% } %>
</main>
  
<%- include('../partials/footer') %>