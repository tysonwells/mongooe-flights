airport<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/destinations/new.css">
  
<%- include("../partials/nav") %>

<main>
  <h1><%= title %></h1>
  <p>Please first ensure that the destination is not in the dropdown
    <select>
      <% destinations.forEach(function(destination) { %>
        <option><%= destination.airport %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-destination-form" action="/destinations" method="POST">
    <label for="airport-input">Destination:</label>
    <input type="text" name="airport" id="airport-input" required>
    <button type="submit">Add Destination</button>
  </form>
</main>

